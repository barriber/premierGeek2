    "version": "0.2.0",
    "configurations": [        
        {
            "type": "node",
            "request": "launch",
            "name": "Serverless",
            "cwd": "${workspaceFolder}/node_modules/serverless/bin/serverless",
            "runtimeExecutable": "npm",
            "args": [
                "invoke",
                "local",
                "--function",
                "get",
                "--data",
                "{}"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "parcel devServer",
            "cwd": "${workspaceRoot}/client",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
            "run",
                "devserver",         
            ],            
            "port": 1234
        }
       
    ]
} 